@import "variables"

@font-face
  font-family 'icomoon'
  src url(icomoon-font-path + '/icomoon.eot?sni6ku')
  src url(icomoon-font-path + '/icomoon.eot?sni6ku#iefix') format('embedded-opentype'), url(icomoon-font-path + '/icomoon.ttf?sni6ku') format('truetype'), url(icomoon-font-path + '/icomoon.woff?sni6ku') format('woff'), url(icomoon-font-path + '/icomoon.svg?sni6ku#icomoon') format('svg')
  font-weight normal
  font-style normal
  font-display block

i
  font-family 'icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-semi-circle
  &:before
    content icon-semi-circle
.icon-empty-circle
  &:before
    content icon-empty-circle
.icon-full-circle
  &:before
    content icon-full-circle
.icon-plus
  &:before
    content icon-plus
.icon-bubbles3
  &:before
    content icon-bubbles3
.icon-spoon-knife
  &:before
    content icon-spoon-knife
.icon-chevron-bottom
  &:before
    content icon-chevron-bottom

