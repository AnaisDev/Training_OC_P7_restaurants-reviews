@import './../../../../../variables';

.restaurants-list {
    margin-left: 20px;

    header {
        display: flex;
        align-items: center;

        .title {
            display: flex;
            align-items: center;
            background-color: $green;
            padding: 0px 15px;
            border-radius: 10px 10px 0 0;

            .average {
                margin-left: 5px;
            }
        }

        .title:hover {
            cursor: pointer;
        }

        i:hover {
            cursor: pointer;
        }
    }

    ul {
        list-style: none;
        padding-left: 0;
    }
}
