@import './../../../../../variables';

.restaurants-list {
    margin-left: 25px;
    max-width: 600px;

    ul {
        list-style: none;
        padding-left: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;

        li {
            flex: 1;
            display: flex;
            justify-content: space-between;
            flex-direction: column;
            border-radius: 10px;
            box-shadow: inset 2px 2px 3px rgba(255, 255, 255, 1), inset -2px -2px 3px rgba(0, 0, 0, 0.6);

            header {
                display: flex;
                align-items: center;
                flex-direction: column;
                padding: 0 20px;
                color: $green;
                font-weight:bold;

                .title {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    padding: 0px 15px;
                    border-radius: 10px;
                    width: 100%;

                    .restaurant-name{
                        text-transform: uppercase;    
                    }

                    .align-title {
                        display: flex;
                        justify-content: flex-end;
                        align-items: center;
                        color: $green;
                    }

                    .average {
                        margin-left: 5px;
                    }

                    .no-review {
                        color: $green;
                    }

                    .icon-chevron-bottom {
                        color: $darkGreen;
                        font-size: 1.5em;
                        padding-left: 10px;
                    }
                }

                .title:hover {
                    cursor: pointer;
                     color:$darkGreen;
                }

                i:hover {
                    cursor: pointer;
                }
            }

            body {
                margin: 0;

                .details {
                    display:flex;
                    flex-direction:column;
                    align-items:center;
                    justify-content: center;

                    .adding-review{
                        margin-top:10px;    
                    }
                }
           
            }
        }
        li:hover{
            background-color: rgba(255, 255, 255, 0.5);
        }
    }
}


