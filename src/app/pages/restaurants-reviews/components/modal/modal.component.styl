@import './../../../../../variables';

.background-modal {
    display: grid;
    justify-items: center;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.8);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;

    .modal{
        width: 350px;
        border-radius: 11px;
        background-color: $lightGray;
        box-shadow: 5px 5px 2px 1px black;

        header{
            display: flex;
            justify-content: space-between;
            background-color: $green;
            color: white;
            padding: 0 15px; 
            border-radius: 11px 11px 0 0;
            box-shadow: 0 3px 7px 1px $darkGreen;
            margin-bottom:15px;

            .title{
                font-size: 0.8em;    
            }

            button{
                background: none;
                border: none;
                color: white;
            }

            button:hover{
                cursor:pointer;
                text-shadow: 2px 2px 1px black;
            }

        }

        .content {
            padding: 15px;
        }
    }
}