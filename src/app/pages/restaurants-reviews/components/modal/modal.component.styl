@import './../../../../../variables';

.modal {
    display: grid;
    justify-items: center;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.8);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;

    .content {
        width: 350px;
        border: 3px solid #262626;
        border-radius: 11px;
        background-color: $backgroundColor;
        padding: 15px;
    }
}